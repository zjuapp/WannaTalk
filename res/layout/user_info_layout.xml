<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_user_info_bar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#333333"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="20sp"
        android:text="用户信息" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_user_info_bar"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/avatar_default" />

    <TextView
        android:id="@+id/tv_info_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_head"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="34dp"
        android:layout_marginRight="30dp"
        android:text="用户简介" />

    <TextView
        android:id="@+id/tv_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_info_bar"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_info_bar"
        android:layout_below="@+id/tv_info_bar"
        android:text="该用户什么都没留下" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_head"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/iv_head"
        android:text="nearu" />

    <TextView
        android:id="@+id/tv_motion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/people_status_rating"
        android:text="爽" />

    <RatingBar
        android:id="@+id/people_status_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_toRightOf="@+id/textView1"
        android:max="255"
        android:numStars="5"
        android:progress="255"
        android:rating="2.5"
        android:stepSize="0.5" />

</RelativeLayout>
