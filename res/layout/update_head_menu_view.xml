<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/update_head_menu"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_head_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/menu_button_selector"        
        android:text="@string/menu_update_head_camera" />

    <Button
        android:id="@+id/btn_head_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/menu_button_selector"
        android:text="@string/menu_update_head_photos" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/menu_button_selector"
        android:text="@string/menu_cancel" />

</LinearLayout>
