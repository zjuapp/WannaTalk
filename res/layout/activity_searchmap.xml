<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/topbar_bg"
    android:textSize="12sp"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/info_button"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginLeft="2dip"
        android:background="@drawable/avatar_default" />
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
      	
        >
        <TextView
		    android:id="@+id/text_sig_tag"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="10dp"
		    android:text="签名"
		    android:ellipsize="end"
		    android:singleLine="true" />
		<TextView
		    android:id="@+id/text_sig"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="TextView"
		    android:ellipsize="end"
		    android:singleLine="true" />
</LinearLayout>
    <RatingBar
        android:id="@+id/rb_mood"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="40dip" 
        android:layout_marginLeft="60dip"/>

    <TextView
        android:id="@+id/text_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:layout_marginTop="5dp" 
        android:layout_marginLeft="-80dip"/>

</LinearLayout>
      
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

        <LinearLayout android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
         >

        <EditText
         android:id="@+id/search_edit"
         android:layout_width="160dp"
         android:layout_height="wrap_content"
         android:ems="10"
         android:hint="edit"/>

        <Button
            android:id="@+id/search_button"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="查找" />

       <Button
        android:id="@+id/setpos_button"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:text="同步" />         
    </LinearLayout>
    <RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <com.baidu.mapapi.map.MapView android:id="@+id/search_map"
        android:layout_width="fill_parent" android:layout_height="fill_parent" 
        android:clickable="true"     
    />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>